<% title "diffs on #{@commit}" %>

<%=partial(:repo_header) %>

<div id="diffs">
  <% @commit.diffs.each do |diff| %>
    <div class="section_bar">
      <div class="title">
        <%=link_to diff.b_path, blob_for_commit_path(@repository, @commit, diff.b_path) %>
      </div>
      <div class="diff">
        <%=CodeRay.scan(diff.diff, :diff, :highlight_code => false, :inline_diff => false).div(:css => :class) %>
      </div>
    </div>
  <% end %>
</div>
